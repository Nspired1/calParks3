<% layout('layouts/boilerplate') %>
<div id="map" style="width: 100%; height: 500px "></div>
    <h1>All Parks</h1>
    <div>
        <a href="/parks/new">Add Park</a>
    </div>
        <% for (let park of parks){ %>
        <div class="card" mb-3>
            <div class="row">
                <div class="col-md-4">
                    <% if (park.images.length > 0){ %> 
                    <img class="img-fluid" src="<%= park.images[0].url %>" > 
                    <% } else { %>
                        <img src="" alt="park"> 
                        <% } %> 
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= park.title  %> 
                        </h5> 
                        <p class="card-text">
                            <%= park.description  %> 
                        </p>
                        <p class="text-muted">
                            <%= park.location  %> 
                        </p>
                        <a href="/parks/<%= park._id  %> " class="btn btn-primary">View <%= park.title  %>  </a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>

<script>
    const mapBoxToken = "<%-process.env.MAPBOX_TOKEN %>"
    const parks = {features: <%- JSON.stringify(parks) %>}
</script>
<script src="/clusterMap.js"> </script>
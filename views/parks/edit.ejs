<% layout('layouts/boilerplate') %> 
<div class="row">
    <h1 class="text-center">Edit a Park</h1>
    <div class="col-6 offset-3">
        <form action="/parks/<%= park._id %>?_method=PUT" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="park[title]" value="<%= park.title %>" required>
                <div class="valid-feedback">Looks good!</div> 
            </div>
            <div class="mb-3" >
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="park[location]" value="<%= park.location %>" required>
                <div class="valid-feedback">Looks good!</div> 
            </div>
           
            <div class="mb-3" >
                <label class="form-label" for="description">Description</label>
                <!-- NOTE: textarea doesn't have a value attribute, unlike an input field, so desc goes in between the textarea tags -->
                <textarea class="form-control" cols="30" rows="10" type="textarea" id="description" name="park[description]"  required><%= park.description %></textarea>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Price</label>
                <div class="input-group" >
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" aria-label="Amount (to the nearest dollar)" placeholder="0" name="park[price]" value="<%= park.price %>">
                </div>
            </div>
            <div class="mb-3" >
                <label class="form-label" for="image">Image</label>
                <input class="form-control" type="file" id="image" name="image"  multiple> 
            </div>
            <div class="mb-3">
                <%  park.images.forEach(function(img, i){ %>
                    <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
                    <div clas="form-check-inline">
                            <input type="checkbox" id="image-<%=i %>" name="deleteImages[]" value="<%= img.filename %>">
                    </div>
                    <label for="image-<%= i %>"></label>
                <% }) %> 
            </div>
            <button class="btn btn-primary">Update Park</button>
        </form>
        <div class="mt-3">
            <a href="/parks/<%= park._id %>">Back to Park</a>
        </div>
    </div>
</div>
   
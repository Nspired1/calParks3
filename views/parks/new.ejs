<% layout('layouts/boilerplate') %> 

<div class="row">
    <h1 class="text-center">New Park</h1>
    <div class="col-6 offset-3"> 
        <form action="/parks" method="POST" novalidate class="needs-validation">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="park[title]" required> 
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3" >
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="park[location]" required> 
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3" >
                <label class="form-label" for="image">Image URL</label>
                <input class="form-control" type="text" id="image" name="park[image]"> 
            </div>
            <div class="mb-3" >
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" cols="30" rows="10" type="textarea" id="description" name="park[description]" required></textarea>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Price</label>
                <div class="input-group" >
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="string" class="form-control" id="price" placeholder="0" name="park[price]">
                </div>
            </div>
            <button class="btn btn-primary">Add Park</button>
        </form>
    </div>
    <div>
        <a href="/parks">Back to all Parks</a>
    </div>
</div>
    

